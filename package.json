{
  "version": "2.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "watch": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "license-plate",
  "author": "Niels Bosman",
  "description": "Dutch license plate formatting and validation in JavaScript.",
  "repository": "git+https://github.com/niels-bosman/license-plate.git",
  "keywords": [
    "License plate",
    "Kenteken",
    "Formatting",
    "Formatteren",
    "Dutch",
    "Nederlands"
  ],
  "bugs": {
    "url": "https://github.com/niels-bosman/license-plate/issues"
  },
  "homepage": "https://github.com/niels-bosman/license-plate#readme",
  "module": "dist/license-plate.esm.js",
  "size-limit": [
    {
      "path": "dist/license-plate.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/license-plate.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "husky": "^7.0.2",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  }
}
